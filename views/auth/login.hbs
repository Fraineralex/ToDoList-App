<main>
    <section class="container">
        <div class="row mx-auto">

            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-bold mt-4 text-white text-center"><i class='bx bx-notepad icon'></i> To Do List</h1>
                <p class="fs-3 fw-bold text-secondary mt-1 text-center">Welcome to your To Do List, log in and start
                    interacting
                    with your tasks.</p>

                <div class="col-10 mx-auto card bg-dark text-white mt-5" style="border-radius: 1rem;">
                    <div class="card-body">

                        <h2 class="fw-bold mb-3 text-uppercase text-center mt-2">Login</h2>
                        <p class="text-white-50 fs-5 mb-3 text-center">Please enter your email and password!</p>

                        <form action="/login" method="POST">
                            <div class="p-3">
                                <label for="email" class="form-label text-white"><strong>Email</strong></label>
                                <input type="email" class="form-control bg-dark text-white border-white form-control-lg"
                                    id="email" name="email" required>
                            </div>

                            <div class="p-3 pt-0 mb-3">
                                <label for="password" class="form-label text-white"><strong>Password</strong></label>
                                <input type="password"
                                    class="form-control bg-dark text-white border-white form-control-lg" id="password"
                                    name="password" required>
                            </div>
                            <button class="btn btn-primary  btn-lg float-end" type="submit"><i class='bx bx-log-in'></i>
                                Sing in</button>
                            <a class="btn btn-light  btn-lg float-end me-2" href="/signup"><i
                                    class='bx bx-user-plus'></i> Sing up</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
        <section>
</main>